{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SlopTok",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "SlopTok.xcodeproj",
                "-scheme",
                "SlopTok",
                "-configuration",
                "Debug",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
} 